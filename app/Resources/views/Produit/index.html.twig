{% extends "Layout/layout.html.twig" %}
{% block body %}
    <div class="row">
        {% for  product in products %}

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ product.image.path }}" alt="{{ product.image.alt }}" width="200" height="200" class="product-img">
                    <div class="caption">
                        <h3>{{ product.nom }}</h3>
                        <p>{{ product.description }}</p>
                        <p><a href="{{ path('product_display', {'productId' : product.id }) }}">{{ 'more-info'|trans}}</a> </p>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(products) }}
    </div>
{% endblock body %}